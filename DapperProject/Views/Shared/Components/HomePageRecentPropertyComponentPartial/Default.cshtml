@model List<DapperProject.Dtos.PropertyDtos.ResultPropertyByIsFeatureDto>


<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <span class="subheading">Special Offers</span>
                <h2 class="mb-4">Son 4 Emlak</h2>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            @foreach (var item in Model)
            {
                if (item.ForSale)
                {
                    <div class="col-sm col-md-6 col-lg ftco-animate">
                        <div class="properties">
                            <a href="/Property/Detail/@item.PropertyId" class="img img-2 d-flex justify-content-center align-items-center" style="background-image: url(@item.ImageUrl1);">
                                <div class="icon d-flex justify-content-center align-items-center">
                                    <span class="icon-search2"></span>
                                </div>
                            </a>
                            <div class="text p-3">
                                <span class="status sale">Satılık</span>
                                <div class="d-flex">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="one">
                                                <h3><a href="#">@item.PropertyName</a></h3>
                                                <p>@item.CategoryName</p>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="two">
                                                <span class="price">@item.Price.ToString("c")</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                 <p>@item.Address</p>
                                <hr>
                                <p class="bottom-area d-flex">
                                    <span><i class="flaticon-selection"></i> @item.AreaSize m2</span>
                                    <span class="ml-auto"><i class="flaticon-bathtub"></i> @item.BathroomCount</span>
                                    <span><i class="flaticon-bed"></i> @item.BedroomCount</span>
                                </p>
                            </div>
                        </div>
                    </div>
                }
                else if (item.ForRent)
                {
                    <div class="col-sm col-md-6 col-lg ftco-animate">
                        <div class="properties">
                            <a href="/Property/Detail/@item.PropertyId" class="img img-2 d-flex justify-content-center align-items-center" style="background-image: url(@item.ImageUrl1);">
                                <div class="icon d-flex justify-content-center align-items-center">
                                    <span class="icon-search2"></span>
                                </div>
                            </a>
                            <div class="text p-3">
                                <span class="status rent">Kiralık</span>
                                <div class="d-flex">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="one">
                                                <h3><a href="#">@item.PropertyName</a></h3>
                                                <p>@item.CategoryName</p>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="two">
                                                <span class="price">@item.Price.ToString("c")</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <p>@item.Address</p>
                                <hr>
                                <p class="bottom-area d-flex">
                                    <span><i class="flaticon-selection"></i> @item.AreaSize m2</span>
                                    <span class="ml-auto"><i class="flaticon-bathtub"></i> @item.BathroomCount</span>
                                    <span><i class="flaticon-bed"></i> @item.BedroomCount</span>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>