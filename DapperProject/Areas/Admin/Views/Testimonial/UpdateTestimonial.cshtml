@model DapperProject.Dtos.TestimonialDtos.GetByIdTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}




<div class="col-md-12 mt-5">
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">
                <h2>Yorum Güncelle</h2>
            </div>
        </div>
        <div class="table_section padding_infor_info">
            <div class="table-responsive-sm">
                <form method="post">
                    <input type="hidden" asp-for="@Model.TestimonialId" />
                    <div class="form-group">
                        <label>Ad Soyad</label>
                        <input type="text" class="form-control" asp-for="@Model.FullName" />
                        <span asp-validation-for="NameSurname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Ünvan</label>
                        <input type="text" class="form-control" asp-for="@Model.Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Ünvan</label>
                        <input type="text" class="form-control" asp-for="@Model.ImageUrl" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control" asp-for="@Model.Description" cols="10" rows="10"></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>
