@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row column_title">
        <div class="col-md-12">
            <div class="page_title">
                <h2>Dashboard</h2>
            </div>
        </div>
    </div>
    <div class="row column1">
        <div class="col-md-6 col-lg-3">
            <div class="full counter_section margin_bottom_30">
                <div class="couter_icon">
                    <div>
                        <i class="fa fa-user yellow_color"></i>
                    </div>
                </div>
                <div class="counter_no">
                    <div>
                        <p class="total_no">@ViewBag.propertCount</p>
                        <p class="head_couter">İlan Sayısı</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="full counter_section margin_bottom_30">
                <div class="couter_icon">
                    <div>
                        <i class="fa fa-clock-o blue1_color"></i>
                    </div>
                </div>
                <div class="counter_no">
                    <div>
                        <p class="total_no">@($"{ViewBag.avgPrice:N0} TL")</p>
                        <p class="head_couter">Ortalama Fiyat</p>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="full counter_section margin_bottom_30">
                <div class="couter_icon">
                    <div>
                        <i class="fa fa-home red_color"></i>
                    </div>

                </div>
                <div class="counter_no">
                    <div>
                        <p class="total_no">@ViewBag.cityCount</p>
                        <p class="head_couter">Sehir Sayısı</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="full counter_section margin_bottom_30">
                <div class="couter_icon">
                    <div>
                        <i class="fa fa-tag red_color"></i>
                    </div>

                </div>
                <div class="counter_no">
                    <div>
                        <p class="total_no">@ViewBag.saleCount</p>
                        <p class="head_couter">Satılık İlanlar</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

  


    <!-- graph -->
    
    <!-- end graph -->
    <div class="row">
        <div class="col-md-6">
            <!-- testimonial -->
            @await Component.InvokeAsync("AdminTestimonial")
            <!-- end testimonial -->
        </div>
        @await Component.InvokeAsync("AdminAgent")
    </div>

   