@model List<DapperProject.Dtos.KaggleDatasetDtos.ResultDataDto>
@{
    ViewData["Title"] = "İlan Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 mt-5">
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">
                <h2>KaggleDataset Listesi</h2>
            </div>
        </div>
        <div class="table_section padding_infor_info">
            <div class="table-responsive-sm">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Durum</th> <!-- Status alanı -->
                            <th>Fiyat</th> <!-- Price alanı -->
                            <th>Yatak Sayısı</th> <!-- Bed alanı -->
                            <th>Banyo Sayısı</th> <!-- Bath alanı -->
                            <th>Sokak</th> <!-- Street alanı -->
                            <th>Şehir</th> <!-- City alanı -->
                            <th>Eyalet</th> <!-- State alanı -->
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.id</td> <!-- id alanı -->
                                    <td>@item.Status</td>
                                    <td>@item.Price</td>
                                    <td>@item.Bed</td>
                                    <td>@item.Bath</td>
                                    <td>@item.Street</td>
                                    <td>@item.City</td>
                                    <td>@item.State</td>
                                    <td><a href="/Admin/Property/DeleteProperty/@item.id" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/Property/UpdateProperty/@item.id" class="btn btn-warning">Güncelle</a></td>
                                </tr>
                            }
                        }
            
                    </tbody>
                </table>
                <a href="/Admin/Property/CreateProperty" class="btn btn-primary">Yeni İlan Girişi</a>
            </div>
        </div>
    </div>
</div>
